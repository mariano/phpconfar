{% extends 'layout.html.twig' %}

{% block content %}

<h1>Edit attendee</h1>

{{ form_start(form, { 'attr': {'role': 'form'} }) }}
	<div class="form-group">{{ form_row(form.ticket_type, {'attr':{'class':'form-control'}}) }}</div>
	<div class="form-group">{{ form_row(form.code, {'attr':{'class':'form-control'}}) }}</div>
	<div class="form-group">{{ form_row(form.source, {'attr':{'class':'form-control'}}) }}</div>
	<div class="form-group">{{ form_row(form.email, {'attr':{'class':'form-control'}}) }}</div>
	<div class="form-group">{{ form_row(form.first_name, {'attr':{'class':'form-control'}}) }}</div>
	<div class="form-group">{{ form_row(form.last_name, {'attr':{'class':'form-control'}}) }}</div>
	<div class="form-group">{{ form_row(form.role, {'attr':{'class':'form-control'}}) }}</div>

	<button type="submit" class="btn btn-large btn-primary">Save</button>
{{ form_end(form) }}

{% endblock %}
